<% if maintenance = recent_maintenance() %>
<div id="maintenance">
<%= link_to "#{maintenance.title} #{maintenance.published_at.strftime('%Y-%m-%d %H:%M')}", gw_webmail_mails_path('INBOX', :mobile => :maintenance), :class => 'maintenanceLink' %>
</div>
<% end %>

<div class="menu">
<%= link_to image_tag("/_common/themes/admin/gw/webmail/mobile/images/bt-jyushin.jpg", :alt => "メール受信"),
  gw_webmail_mails_path(@mailbox.name, :mobile => 'top', :date => Time.now.to_f.to_s), :class => 'index', :title => 'メール受信', :accesskey => '1' %>
<%= link_to image_tag("/_common/themes/admin/gw/webmail/mobile/images/bt-sakusei.jpg", :alt => "メール作成"),
  new_gw_webmail_mail_path('INBOX'), :class => 'innerLink', :accesskey => '2' %>
</div>

<div class="folderTitle"><img src="/_common/themes/admin/gw/webmail/mobile/images/folder.jpg" alt="フォルダ"/>フォルダ</div>
<%= render :partial => 'mailbox_mobile' %>

<div class="sendMenu">
<div class="title">
  <img src="/_common/themes/admin/gw/webmail/mobile/images/send-menu-blue.jpg" alt="送信メニュー" />送信メニュー
</div>
<div class="menus">
<%= link_to 'メール作成', new_gw_webmail_mail_path('INBOX'), :class => 'menuItem', :accesskey => '3' %><br/>
<%= link_to Joruri.config.application['webmail.sys_address_menu'], gw_webmail_sys_addresses_path, :class => 'menuItem', :accesskey => '4' %><br/>
<%= link_to Joruri.config.application['webmail.address_group_menu'], gw_webmail_address_groups_path, :class => 'menuItem', :accesskey => '5' %><br/>
<%= link_to Joruri.config.application['webmail.memo_menu'], gw_webmail_memo_path(0), :class => 'menuItem', :accesskey => '6' %><br/>
</div>
</div>

<% if Joruri.config.sso_settings %>
