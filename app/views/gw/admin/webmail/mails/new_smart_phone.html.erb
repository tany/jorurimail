<div class="newMailTitle">
  <span>メール作成</span>
</div>

<%= error_messages_for "item" %>
<%= form_for :item, :url => mobile_send_gw_webmail_mail_path(params[:mailbox], params[:id].to_i),
  :html => {:id => "item_form", :class => "newForm", :name => "newForm"} do |f| %>
  <%= render :partial => 'form_smart_phone', :locals => {:f => f} %>
  <%=raw submit([["送信する", "send"],["下書き保存", "draft"]]) %>
<% end %>
