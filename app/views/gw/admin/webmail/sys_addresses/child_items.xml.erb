<?xml version='1.0' encoding='UTF-8'?>
<items>
  <% @groups.each do |g| %>
  <group>
    <id><%= g.id %></id>
    <name><%= g.name %></name>
    <has_children><%= g.enabled_children.count > 0 || g.count_users_having_email > 0 ? 1 : 0 %></has_children>
  </group>
  <% end %>
  <% @users.each do |u| %>
  <item>
    <id><%= u.id %></id>
    <account><%= u.account %></account>
    <name><%= u.name %></name>
    <email><%= u.email %></email>
  </item>
  <% end %>
</items>