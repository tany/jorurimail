<div id="signContent">
<%= render :partial => 'menu' %>

<table class="index">
  
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: ;"><%= Gw::WebmailFilter.new.locale(:name) %></th>
    <th style="width: 60px; text-align: right;">並び順</th>
    <th style="width: 120px; text-align: center;">作成日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>
  
  <% for item in @items %>
  <tr <%= cycle '', 'class="cycle"' %>>
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td><%=h item.name %> <%#= '（既定）' if item.default_flag == 1 %></td>
    <td style="text-align: right;"><%= item.sort_no %></td>
    <td style="text-align: center;"><%= safe{item.created_at.strftime('%Y-%m-%d %H:%M')} %></td>
    <td style="text-align: center;"><%= safe{item.status.name} %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>

</div>
