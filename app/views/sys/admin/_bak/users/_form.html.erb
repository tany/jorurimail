<table class="show">
  <tr>
    <th><%= @item.locale(:state) %></th>
    <td><%= f.radio_buttons :state, @item.states, :class => 'status' %></td>
  </tr><tr>
    <th><%= @item.locale(:group_id) %></th>
    <td><%= f.select_with_tree :group_id, Sys::Group.find(:all, :conditions => {:level_no => 2}, :order => :sort_no) %></td>
  </tr><tr>
    <th><%= @item.locale(:account) %></th>
    <td><%= f.text_field :account, :class => 'string', :style => 'width: 200px;' %></td>
  </tr><tr>
    <th><%= @item.locale(:name) %></th>
    <td><%= f.text_field :name, :class => 'string name', :style => 'width: 200px;' %></td>
  </tr><tr>
    <th><%= @item.locale(:name_en) %></th>
    <td><%= f.text_field :name_en, :class => 'string name', :style => 'width: 400px;' %></td>
  </tr><tr>
    <th><%= @item.locale(:email) %></th>
    <td><%= f.text_field :email, :class => 'string email', :style => 'width: 400px;' %></td>
  </tr><tr>
    <th><%= @item.locale(:auth_no) %></th>
    <td><%= f.radio_buttons :auth_no, @item.authes, :class => 'status' %></td>
  </tr><tr>
    <th><%= @item.locale(:role_name) %></th>
    <td><%= render :partial => 'sys/admin/_partial/role_names/form', :locals => {:f => f, :item => @item} %></td>
  </tr>
</table>

